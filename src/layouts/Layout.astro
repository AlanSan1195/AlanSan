---
import Backgound from "../components/Backgound.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Alan San</title>
  </head>
  <body>
    <Header />
    <Backgound />
    <main
      class="flex flex-col justify-between items-center content-center min-h-screen"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style>
  @import "tailwindcss";
  @theme {
    --font-display: "frontend", "sans-serif";
    --font-static: "static", "sans-serif";
    --font-pixel: "pixel", "sans-serif";
    --font-jet: "jet";
  }
  @font-face {
    font-family: "frontend";
    src: url(/public/fonts/FRONTEND.woff2) format(woff2);
  }
  @font-face {
    font-family: "static";
    src: url(/public/fonts/static.woff2) format(woff2);
  }
  @font-face {
    font-family: "pixel";
    src: url(/public/fonts/pixel.woff2) format(woff2);
  }
  @font-face {
    font-family: "jet";
    src: url(/public/fonts/JetBrainsMono-Bold.ttf) format("truetype");
  }

  html,
  body {
    margin: 0px 0px;
    width: 100%;
    height: 100%;
    background-color: rgb(22 22 22);
    color: white;
    color-scheme: light dark;
    scrollbar-color: rgb(246, 97, 176)  hsl(0, 0%, 25%);
  }
</style>
  