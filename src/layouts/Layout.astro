---
import Backgound from "../components/Backgound.astro";
import Header from "../components/Header.astro";
import Backdrop from "../components/Backdrop.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title =  "Alan San - Diseñador Web & Frontend",
  description = "Alan San - Diseñador web frontend especializado en crear experiencias digitales modernas. Trabajo de forma independiente desde Guadalajara con las últimas tecnologías web.",
  image = "/logo.svg",
  canonical = Astro.url.href
} = Astro.props;

const siteUrl = "https://alansan.dev"; 
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Alan San" />
    <meta name="keywords" content="Alan San, desarrollador frontend, desarrollador web, Guadalajara, JavaScript, React, Astro, HTML, CSS, programador, Alan Sandoval" />
    <meta name="google-site-verification" content="yVrFQfhfT1U7x9nq2B8UFvR8i3OCOuu7o_yYaojqvm4" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#161616" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Favicon-logo -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, siteUrl).href} />
    <meta property="og:site_name" content="Alan San" />
    <meta property="og:locale" content="es_MX" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, siteUrl).href} />
    <meta name="twitter:creator" content="@AlanSan86780460" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Alan San",
        "alternateName": "Alan Sandoval",
        "jobTitle": "Diseñador Web y Frontend",
        "url": "https://alansan.dev",
        "image": "https://alansan.dev/imagenes/FotoPerfil.webp",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Guadalajara",
          "addressRegion": "Jalisco",
          "addressCountry": "MX"
        },
        "sameAs": [
          "https://github.com/AlanSan1195",
          "https://www.linkedin.com/in/devsan11/",
          "https://www.instagram.com/alanpro._/",
          "https://www.facebook.com/alansandovalk11"
        ],
        "knowsAbout": ["JavaScript", "React", "Astro", "Frontend Development", "Web Development", "Programador", "Programador Web", "Diseñador Web", "Alan San"]
      }
    </script>
    
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <Backgound />
    <main
    class="flex flex-col justify-center mx-auto items-center max-w-[1500px] relative "
    >
    <slot />
    <Footer />
  </main>
  <Backdrop />
  </body>
</html>
<style>
  @import "tailwindcss";
  @theme {
    --font-display: "frontend", "sans-serif";
    --font-static: "static", "sans-serif";
    --font-pixel: "pixel", "sans-serif";
    --font-jet: "jet", "sans-serif";
  }
  @font-face {
    font-family: "frontend";
    src: url(/public/fonts/FRONTEND.woff2) format(woff2);
  }
  @font-face {
    font-family: "static";
    src: url(/public/fonts/static.woff2) format(woff2);
  }
  @font-face {
    font-family: "pixel";
    src: url(/public/fonts/pixel.woff2) format(woff2);
  }
  @font-face {
    font-family: "jet";
    src: url(/public/fonts/JetBrainsMono-Bold.ttf) format("truetype");
  }

  html,
  body {
    margin: 0px 0px;
    width: 100%;
    height: 100%;
    background-color: rgb(22 22 22);
    color: white;
    color-scheme: light dark;
    scrollbar-color: oklch(65.6% 0.241 354.308) rgb(22 22 22);

  }
</style>
  