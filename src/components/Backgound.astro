<!-- Fondo animado - capa de toda la pantalla ----------------------------------------- -->
<div
  class="overflow-hidden pointer-events-none fixed inset-0 min-h-screen  "
>
  <!-- div que contiene a todos los divs que representan las luces -->
  <div class="northen-lights-box rotate-17 md:rotate-35 md:scale-135">
    <!-- divs que representan las luces..... -->
    <div class="northen-light" style="--x: 0;  --y: -100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 12 ;--y: -100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 24;  --y: 100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 36;--y: 100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 48;--y: 100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 60;--y: 100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 72;--y: 100; --scale: 0.5"></div>
    <div class="northen-light" style="--x: 84;--y: 100; --scale: 0.5"></div>
  </div>
</div>

<style>
  .northen-lights-box {
    position: absolute;
    inset: 0;
    translate: 60dvw -19dvh;
    opacity: 70%;
    filter: blur(60px) brightness(0.9);

 /* se funde con fondo   */
  }

  /* 3️⃣  Cada “luz” individual  ----------------------------------- */
  .northen-light {
    position: absolute;
    top: 0;
    left: 0;
    width: 100px;
    height: 900px;
    /* DE DONDE TE PUSE AL PRICNIPIO POSICIONATE * 10 PX A UN LADO  */
    --base: translate(calc(var(--x) * 10px));
    transform: var(--base);

   
  }

  /* divas pares */
  .northen-light:nth-child(2n) {
    animation: fly-y 3s ease infinite alternate;
    animation-delay: 0.6s;
     background-image: linear-gradient(
      40deg,
      transparent,
      #00d0ff5a 20%,
      transparent,
      #c300ff45 10%,
      #00f2fff3 76%,
      #00d0ff5a 90%
    );
  }

  /* divs impares  */
  .northen-light:nth-child(2n + 1) {
    background-image: linear-gradient(
      0deg,
      transparent,
      #00f2fff3 30%,
      #9710c0d1 35%,
      #00d0ff5a
    );
    animation: fly-x 3s ease infinite alternate;
  }

  @keyframes fly-y {
    from {
      transform: var(--base) translateY(0%);
    }
    to {
      transform: var(--base) translateY(10%);
    }
  }
  @keyframes fly-x {
    from {
      transform: var(--base) translateX(0);
      transition: var(--base) translateY(0);
    }
    to {
      transform: var(--base) translateX(-25%);
      transition: var(--base) translateY(-65%);
    }
  }
 

</style>
