---
import GitHubIcon from "../assets/gitHubpixel.svg";
import LinkedInIcon from "../assets/linkPixel.svg";
import Cohete from "../assets/cohete.svg";
---

<footer
  class="w-full mt-20 mb-20 z-50"
  role="contentinfo"
  aria-label="Site footer"
>
  <!-- Línea divisoria -->
  <div class="w-full h-[0.5px] bg-[var(--color-border)]"></div>

  <div class="grid grid-cols-3 items-center gap-4 pt-6">
    <!-- Izquierda: Créditos -->
    <p class="font-king ligero text-sm text-[var(--color-text-muted)] m-0 text-left">
      Hecho por <a
        href="https://github.com/AlanSan1195"
        class="text-[var(--color-text-muted)] hover:text-[var(--color-accent)] no-underline transition-colors"
        rel="author"
        target="_blank"
      >Alan San</a>
    </p>

    <!-- Centro: Links sociales -->
    <nav class="flex items-center justify-center gap-4" aria-label="Redes sociales">
      <a
        href="https://github.com/AlanSan1195"
        target="_blank"
        rel="noreferrer"
        class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
        aria-label="GitHub"
      >
        <GitHubIcon class="w-4 h-4" />
      </a>
      <a
        href="https://www.linkedin.com/in/devsan11/"
        target="_blank"
        rel="noreferrer"
        class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
        aria-label="LinkedIn"
      >
        <LinkedInIcon class="w-4 h-4" />
      </a>
      <a
        href="mailto:alansandovalt1@gmail.com"
        rel="noreferrer"
        class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
        aria-label="Email"
      >
        <Cohete class="w-4 h-4" />
      </a>
    </nav>

    <!-- Derecha: Año -->
    <p class="font-king ligero text-sm text-[var(--color-text-muted)] m-0 text-right">
      {new Date().getFullYear()}
    </p>
  </div>
</footer>

<style>
  .ligero {
    font-weight: 200;
  }
</style>
