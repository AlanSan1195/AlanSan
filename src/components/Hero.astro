---
import SocialMedia from "../components/Social.astro";
---

<!-- HERO-FULL -->
<section
  class="w-[90%] h-auto flex flex-col mt-8 z-20"
  aria-labelledby="hero-title"
>
  <!-- HERO SM -->
  <div class="cursor-pointer md:hidden h-full group">
    <h2
      id="hero-title"
      class="font-display text-[90px] line uppercase break-words my-0"
    >
      <span
        class="hover:text-orange-400 focus:text-orange-400 active:text-orange-400"
        >Front</span
      >
      <span
        class="bg-pink-500 w-18 h-[2px] inline-block -translate-y-4"
        aria-hidden="true"></span>
      <span
        class="hover:text-orange-400 focus:text-orange-400 active:text-orange-400"
        >End</span
      >
      <span
        class="hover:text-orange-400 focus:text-orange-400 active:text-orange-400"
        >Developer</span
      >
    </h2>
    <!-- FOTO PERFIL -->
    <div class="flex flex-col md:hidden">
      <figure
        class="rounded-full w-14 h-14 my-3 border-white/60 border-[1px] m-0"
      >
        <img
          src="/imagenes/FotoPerfil.webp"
          alt="Foto de perfil de Alan San, desarrollador frontend"
          class="absolute w-14 h-14 rounded-full border-white/60 border-[1px] p-1"
          width="56"
          height="56"
          loading="eager"
        />
      </figure>
      <h1 id="my-name" class="mt-2 mb-0 font-static text-3xl md:hidden">
        Alan San
      </h1>
      <p id="hero-description-sm" class="font-static opacity-80 text-lg">
         Soy un desarrollador web con sede en Guadalajara. Espero poder ayudarte a implementar ideas creativas para cualquier proyecto web.
      </p>
    </div>
  </div>
  <div class=" m-0 md:hidden">

    <SocialMedia />
  </div>

  <!-- HERO MD-->
  <div class="flex flex-col cursor-pointer">
    <div class="md:flex md:w-fit hidden md:flex-col h-full">
      <h2 class="font-display text-3xl uppercase">
        <span class="hover:text-orange-400">Front</span>
        <span
          class="bg-pink-500 w-10 h-[2px] inline-block -translate-y-2"
          aria-hidden="true"></span>
        <span class="hover:text-orange-400 inline-block">End</span>
        <br /><span class="inline-block hover:text-orange-400 translate-x-10"
          >Developer</span
        >
      </h2>
    </div>
    <!-- imagen md  -->
    <div class="hidden items-center gap-x-1 md:block w-xl">
      <figure
        class="rounded-full w-18 h-18 border-white/60 border-[1px] flex-col m-0"
      >
        <img
          src="/imagenes/FotoPerfil.webp"
          alt="Foto de perfil de Alan San, desarrollador frontend"
          class="absolute rounded-full border-white/60 border-[1px] p-1"
          width="72"
          height="72"
          loading="eager"
        />
      </figure>
      <h1 id="my-name-md" class="mb-0 font-static text-3xl hidden md:flex mt-5">
        Alan San
      </h1>
      <p id="hero-description" class="font-static opacity-80 my-2 text-lg">
      Soy un desarrollador web con sede en Guadalajara. Espero poder ayudarte a implementar ideas creativas para cualquier proyecto web.
      </p>
      <!-- social-media -->
      <SocialMedia />
    </div>
  </div>
</section>

<style>
  .line {
    line-height: 95%;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  // Register GSAP plugins
  gsap.registerPlugin(SplitText);
  gsap.registerPlugin(ScrollTrigger);
  

   
      // Create SplitText instance
      const Text = new SplitText("#hero-description-sm", {
        type: "words",
        charsClass: "char",
      });
      
      // Animate words using GSAP
      gsap.from(Text.words, {
        duration: 1.0,
        opacity: 0,
        y: 10,
        stagger: 0.1,
        filter: "blur(10px)",
        delay: 0.3
      });

</script>
