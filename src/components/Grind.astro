  </article>

  <!-- matera landing  -->
  <article
    class=" relative flex flex-col h-80 border-[1.5px] border-white/10 outline outline-offset-[0.5px] outline-black bg-black/40 backdrop-blur-5xl  rounded-3xl text-xl p-4 lg:p-4 md:p-0  col-span-14 md:col-span-5  md:h-auto gap-y-2  "
  >

      <div class="flex items-center justify-between  m-1 md:gap-x-5 ">
        <div
          class="border-[1px] border-white/20 outline outline-offset-[0.5px] outline-black rounded-3xl  bg-black/40 relative w-fit px-2 py-1 md:px-4 md:py-2 flex  "
          >
          <span class="m-0 informative text-xs text-center">Landing Page</span>
        </div>
        <span class="m-0 informative break-words text-wrap"
          >Restaurante-Menú</span
        >
      </div>
      <a
        href="/matera"
        id="matera-project-link"
        class="block focus:outline-none  rounded-[20px]"
        aria-label="Ver detalles del proyecto La Matera"
      >
        <img
          src="/imagenes/matera3.webp"
          alt="Landing page La Matera desarrollada por Alan San - Restaurante con menú digital"
          class="w-[94%] h-[78%] md:h-[70%]  object-fill flex rounded-[20px] my-1 absolute left-1/2 -translate-x-1/2"
          loading="lazy"
        />
      </a>

  </article>
  <div
    class="box-gen rounde text-xl p-4 border-2 col-span-14 md:col-span-10 hidden h-80"
  >
    <div
      class="bg-black/30 backdrop-blur-5xl h-full rounded-[20px] border border-gray-400/20"
    >
      cuarto cuadro
    </div>
  </div>
</section>

<script>
  // Suitch project click tracking
  function initSuitchTracking() {
    const suitchLink = document.getElementById('suitch-project-link');
    if (!suitchLink) return;
    
    suitchLink.addEventListener('click', function() {
      const storageKey = 'suitch-project-clicks';
      let clicks = parseInt(localStorage.getItem(storageKey) || '0');
      clicks += 1;
      localStorage.setItem(storageKey, clicks.toString());
    });
  }

  // Matera project click tracking
  function initMateraTracking() {
    const materaLink = document.getElementById('matera-project-link');
    if (!materaLink) return;
    
    materaLink.addEventListener('click', function() {
      const storageKey = 'matera-project-clicks';
      let clicks = parseInt(localStorage.getItem(storageKey) || '0');
      clicks += 1;
      localStorage.setItem(storageKey, clicks.toString());
    });
  }

  // Projects scroll click tracking  
  function initProjectsScrollTracking(){
    const projectScrollLink = document.getElementById('project-scroll-link');
    if(!projectScrollLink) return;
    
    projectScrollLink.addEventListener('click', function(){
      const scrollKey = 'project-scroll-clicks';
      let scrolls = parseInt(localStorage.getItem(scrollKey) || '0');
      scrolls += 1;
      localStorage.setItem(scrollKey, scrolls.toString());
    });
  }
  
  // Initialize when DOM is loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initSuitchTracking();
      initMateraTracking();
      initProjectsScrollTracking();
    });
  } else {
    initSuitchTracking();
    initMateraTracking();
    initProjectsScrollTracking();
  }
</script>

