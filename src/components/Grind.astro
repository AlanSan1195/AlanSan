        class="relative bg-black/30  border-[1.5px]  border-white/10 outline outline-offset-[0.5px] outline-black rounded-3xl   items-center flex justify-center backdrop-blur-5xl h-full "
      >
          <!-- Contenido principal: imagen y actividad actual -->
