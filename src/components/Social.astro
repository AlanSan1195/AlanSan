---
import profileImage from "../assets/fotoperfil.webp";
import TwitchIcon from "../assets/twitch.svg";
import GitHubIcon from "../assets/gitHubpixel.svg";
import Cohete from "../assets/cohete.svg";
import LinkedInIcon from "../assets/linkPixel.svg";
import ProjectIcon from "../assets/project.svg";
---

<!-- social-media -->
<div
  class="w-full h-auto flex flex-wrap gap-x-4 sm:gap-x-5 justify-between items-center"
>
  <div class="flex
   gap-x-4">
    <a
      class="no-underline text-inherit group flex items-center gap-x-1"
      target="_blank"
      href="https://www.linkedin.com/in/devsan11/"
      rel="noreferrer"
    >
      <LinkedInIcon
        class="w-3 h-3 group-hover:text-blue-400 opacity-60 group-hover:opacity-100"
      />
      <p
        class="no-underline text-inherit font-king ligero text-xs opacity-60 group-hover:opacity-100"
      >
        LinkedIn
      </p></a
    >

    <a
      class="no-underline text-inherit flex items-center gap-x-1 group"
      target="_blank"
      href="https://github.com/AlanSan1195"
      rel="noreferrer"
    >
      <GitHubIcon
        class="w-3 h-3 group-hover:text-[var(--color-accent)] opacity-60 group-hover:opacity-100"
      />
      <p
        class="no-underline text-inherit font-king ligero text-xs opacity-60 group-hover:opacity-100"
      >
        GitHub
      </p>
    </a>
    <a
      class="no-underline text-inherit flex items-center gap-x-1 group"
      target="_blank"
      href="mailto:alansandovalt1@gmail.com"
      rel="noreferrer"
    >
      <Cohete
        class="w-3 h-3 group-hover:text-[#e8701f] opacity-60 group-hover:opacity-100"
      />
      <p
        class="no-underline text-inherit font-king ligero text-xs opacity-60 group-hover:opacity-100"
      >
        Email
      </p>
    </a>
    <a
      class="no-underline text-inherit flex items-center gap-x-1 group"
      target="_blank"
      href="https://www.twitch.tv/alanpr0o"
      rel="noreferrer"
    >
      <TwitchIcon
        class="w-3 h-3 group-hover:text-purple-400 opacity-60 group-hover:opacity-100"
      />
      <p
        class="no-underline text-inherit font-king ligero text-xs opacity-60 group-hover:opacity-100"
      >
        Twitch
      </p>
    </a>
    <a
      id="cv-btn"
      class="no-underline text-inherit flex items-center gap-x-1 group cursor-pointer"
      href="/cv2026.pdf"
      download="CV-Alan-Sandoval.pdf"
      aria-label="Descargar CV"
    >
      <ProjectIcon
        class="w-3 h-3 group-hover:text-emerald-500 opacity-60 group-hover:opacity-100"
      />
      <p
        class="no-underline text-inherit font-king ligero text-xs opacity-60 group-hover:opacity-100"
      >
        CV
      </p>
    </a>
  </div>
  <div class="no-underline text-inherit hidden sm:flex items-center gap-x-1 group">
    <p class="no-underline text-inherit font-king ligero text-xs opacity-60">
      Guadalajara, Méx.
    </p>
  </div>
</div>

<!-- Toast de confirmación de descarga -->

<script>
  const btn = document.getElementById("cv-btn") as HTMLAnchorElement;

  btn?.addEventListener("click", (e) => {
    e.preventDefault();
    const confirmed = window.confirm("¿Descargar el CV?");
    if (confirmed) {
      const a = document.createElement("a");
      a.href = "/cv2026.pdf";
      a.download = "CV-Alan-Sandoval.pdf";
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
    }
  });
</script>

<style>
  .ligero {
    font-weight: 300;
  }
</style>
